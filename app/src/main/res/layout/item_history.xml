<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/konten_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#FFF">

        <ImageView
            android:id="@+id/gbr_peminjaman_history"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/ic_history_pinjam"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/text_judul_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gbr_peminjaman_history"
            android:text="Laskar Pelangi"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/text_pengarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gbr_peminjaman_history"
            android:layout_below="@+id/text_judul_buku"
            android:text="Adi Purwono"
            android:textColor="#333"
            android:textSize="@dimen/text_size_13"/>

        <TextView
            android:id="@+id/tanggal_selesai_peminjaman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gbr_peminjaman_history"
            android:layout_below="@+id/text_pengarang"
            android:text="30 Oktober 2019"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/text_size_11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/tanggal_selesai_peminjaman"/>

    </RelativeLayout>

</RelativeLayout>