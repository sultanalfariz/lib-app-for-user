<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textSize="@dimen/text_size_17"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/konten_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_area">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:textSize="@dimen/text_size_15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/form_nama"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="Masukkan Nama Lengkap"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/form_nim"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="Masukkan NIM"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fakultas"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/form_fakultas"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="Masukkan Asal Fakultas"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/form_prodi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="Masukkan Prodi"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="#000"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/form_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:hint="Masukkan Password"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_btn_yellow"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_daftar_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Daftar"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold"
            android:textColor="#333"/>

    </RelativeLayout>

</RelativeLayout>