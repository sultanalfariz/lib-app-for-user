<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_buku"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="@dimen/dp_3"
        app:cardBackgroundColor="#FFF"
        app:cardElevation="@dimen/dp_7"
        app:cardCornerRadius="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/konten_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/gambar_buku"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_90"
                app:riv_corner_radius="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"/>

            <RelativeLayout
                android:id="@+id/konten_sapaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_judul_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laskar Pelangi"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_16"/>

                <TextView
                    android:id="@+id/text_pengarang_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_judul_buku"
                    android:text="Adi Purwono"
                    android:textColor="#888"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/text_jenis_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_pengarang_buku"
                    android:text="Novel"
                    android:textColor="#333"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_14"/>

                <TextView
                    android:id="@+id/text_status_buku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Tersedia"
                    android:textColor="#378c18"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/text_size_14"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>