<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.ValidasiPeminjamanActivity">

    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_validasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validasi Peminjaman"
            android:textSize="@dimen/text_size_17"
            android:textColor="#FFF"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/konten_1"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_area"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp_7"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_kode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Peminjaman"
                android:textAllCaps="true"
                android:maxLines="2"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_140"
                android:textColor="#999"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:id="@+id/text_kode_peminjaman"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kode"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_140"
                android:textStyle="bold"
                android:textColor="#378c18"
                android:textSize="@dimen/text_size_40"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#ddd"/>

            <TextView
                android:id="@+id/text_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="judul"
                android:textAllCaps="true"
                android:maxLines="2"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/text_judul_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#555"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/text_pengarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pengarang"
                android:textAllCaps="true"
                android:maxLines="2"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/text_pengarang_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:text=""
                android:textColor="#555"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/text_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Peminjam"
                android:textAllCaps="true"
                android:maxLines="2"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/text_jenis_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#555"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textAllCaps="true"
                android:maxLines="2"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/text_desc_buku"
                android:layout_width="@dimen/dp_270"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#555"
                android:textSize="@dimen/text_size_14"/>

            <TextView
                android:id="@+id/text_status_buku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Tunjukkan kode diatas pada admin perpustakaan\n\tuntuk pengambilan buku"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#d72b2e"
                android:textSize="@dimen/text_size_13"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/btn_tutup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_below="@id/konten_1"
        android:gravity="center"
        android:background="@drawable/bg_btn_red"
        android:text="Tutup"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_17"
        android:textColor="#FFF"/>

</RelativeLayout>